generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(cuid())
  name         String 
  body         String
  description  String
  background   String
  photo        String
  slug         String   @unique
  createdOn    DateTime @default(now())
  lastModified DateTime @updatedAt
  userId       String
  tags         ProjectTag[]
}

model Tag {
  id      String       @id @default(cuid())
  name    String       @unique
  projects ProjectTag[]
}

model ProjectTag {
  projectId String
  tagId     String
  project   Project @relation(fields: [projectId], references: [id])
  tag       Tag     @relation(fields: [tagId], references: [id])
  @@id([projectId, tagId]) // Kompozitní klíč
}